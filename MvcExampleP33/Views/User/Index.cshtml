@using System.Security.Claims
@model IEnumerable<UserDto>
@{
    ViewData["Title"] = "Користувачі";

    var currentUserId = int.Parse(User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.NameIdentifier).Value);
}

<h1 class="text-center mb-4">Список користувачів</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ІД</th>
            <th>Email</th>
            <th>Ролі</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        await Html.RenderPartialAsync("Components/RoleBadge", role);
                    }

                </td>
                <td>
                    @if (user.Id == currentUserId)
                    {
                        <span class="badge bg-dark">Це ви</span>
                    }


                    @if (user.Id != currentUserId)
                    {
                        <a class="btn btn-sm btn-secondary"
                           asp-controller="User"
                           asp-action="Roles"
                           asp-route-id="@user.Id">
                            Ролі
                        </a>
                    }
                    

                    @* <a class="btn btn-sm btn-secondary"
                       asp-controller="Product"
                       asp-action="Edit"
                       asp-route-id="@user.Id">
                        Редагувати
                    </a>

                    <a class="btn btn-sm btn-danger"
                       asp-controller="Product"
                       asp-action="Delete"
                       asp-route-id="@user.Id">
                        Видалити
                    </a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
